@{
    ViewData["Title"] = "Home Page";

}


<div class="text-center">
    <h1 class="display-4">Welcome Carshare</h1>
</div>

<div class="row pb-3 backgroundWhite">


    @foreach (var car in Model)
    {
    <div class="col-lg-3 col-md-6">
        <div class="row p-2">
            <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                <div class="card" style="border:0px;">
                    <img src="@car.ImageUrl" class="card-img-top rounded" />
                    <div class="pl-1">
                        <p class="card-title h5"><b style="color:#2c3e50">@car.Brand</b></p>
                        <p class="card-title text-primary"><b>@car.Model</b></p>
                    </div>
                    <div style="padding-left:5px;">
                        <p>Price: <b class="">$@car.Price</b></p>
                    </div>
                </div>
                <div>
                    <a asp-action="Details" btn btn-primary form-control asp-route-id="@car.Id">Details</a>
                </div>
            </div>
        </div>
        
    </div>
    }
   